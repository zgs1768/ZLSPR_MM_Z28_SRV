            <f:DynamicPageHeader pinnable="true">
                <FlexBox
                    alignItems="Start"
                    justifyContent="SpaceBetween"
                >
                    <items>
                        <Panel backgroundDesign="Transparent">
                            <content>
                                <layout:HorizontalLayout allowWrapping="true">
                                    <layout:VerticalLayout
                                        class="sapUiMediumMarginEnd"
                                    >
                                        <ObjectAttribute
                                            id="headtext1"
                                            title="{i18n>IBLNR}"
                                        />
                                        <ObjectAttribute
                                            id="headtext2"
                                            title="{i18n>LGORT}"
                                            
                                        />
                                        <ObjectAttribute
                                            id="headtext3"
                                            title="{i18n>GIDAT}"
                                        />
                                    </layout:VerticalLayout>
                                </layout:HorizontalLayout>
                            </content>
                        </Panel>
                    </items>
                </FlexBox>
            </f:DynamicPageHeader>
