            <smartTable:SmartTable
                id="DatailST"
                entitySet="PhDetail_LevelSet"
                tableType="ResponsiveTable"
                enableExport="false"
                useExportToExcel="false"
                header="棚卸明細"
                showRowCount="true"
                enableAutoBinding="false"
                demandPopin="true"
                persistencyKey="SmartTableAnalytical_Explored"
                class="sapUiResponsiveContentPadding"
                enableAutoColumnWidth="true"
                initiallyVisibleFields=""
                beforeRebindTable="onBeforeRebindTable"
                initialise="onInitialise"
            >
                <Table
                    id="DatailT"
                    growing="true"
                    growingThreshold="15"
                    items="{detailModel>/Detail}"
                >
                    <columns>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="明細" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="棚番" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="品目" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="在庫タイプ" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="帳簿数量" />
                        </Column>
                        <Column id="DatailTC">
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "cMenge", "columnIndex":"5"}'
                                />
                            </customData>
                            <Text
                                id="checkMenge"
                                text="数量"
                            />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="単位" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="検数済み数量" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="DatailTColumnListItem">
                            <cells>
                                <Text text="{detailModel>Zeili}" />
                                <Text text="{detailModel>LGPBE}" />
                                <Text text="{detailModel>Matnr}" />
                                <Text text="{detailModel>Bstar}" />
                                <Text
                                    text="{path: 'detailModel>Buchm',
										   formatter: '.formatMenge'}"
                                />
                                <Input
                                    id="idInputcMenge"
                                    type="Number"
                                    value="{detailModel>cMenge}"
                                />
                                <Text text="{detailModel>Meins}" />
                                <Text
                                    text="{path: 'detailModel>Menge',
										   formatter: '.formatMenge'}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </smartTable:SmartTable>
        </f:content>

        <f:footer>
            <OverflowToolbar>
                <Button
                    icon="sap-icon://message-popup"
                    text="{/messagesLength}"
                    type="Emphasized"
                    press="onMessageButtonPress"
                    visible="{= !!${/messagesLength}}"
                />
                <ToolbarSpacer />

                <Button
                    icon="sap-icon://qr-code"
                    text="{i18n>handy}"
                    press=".onHandyPress"
                    ariaDescribedBy="handyButtonDescription genericButtonDescription"
                    enabled="true"
                >
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                </Button>

                <Button
                    id="scan"
                    type="Emphasized"
                    text="{i18n>scan}"
                    press=".onscanPress"
                    enabled="false"
                />
                <ndc:BarcodeScannerButton
                    id="button"
                    scanSuccess="onScanSuccess"
                    scanFail="onScanError"
                />

                <Button
                    id="confirm"
                    text="{i18n>confirm}"
                    press=".onconfirmPress"
                />
                <Button
                    id="return"
                    text="{i18n>return}"
                    press=".onreturnPress"
                    ariaHasPopup="Dialog"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
